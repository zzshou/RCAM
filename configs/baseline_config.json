{
  "dataset_reader": {
    "type": "RCAM_reader",
    "tokenizer": {
      "type": "pretrained_transformer",
      "model_name": "cased_L-12_H-768_A-12",
      "add_special_tokens": false
    },
    "token_indexers": {
      "bert_tokens": {
        "type": "pretrained_transformer",
        "model_name": "cased_L-12_H-768_A-12"
      }
    },
    "article_length_limit": 300,
    "question_length_limit": 512
  },
  "train_data_path": "data/training_data/Task_1_train.jsonl",
  "validation_data_path": "data/training_data/Task_1_dev.jsonl",
  "model": {
    "type": "RCAM_model",
    "text_field_embedder": {
      "token_embedders": {
        "bert_tokens": {
          "type": "pretrained_transformer",
          "model_name": "cased_L-12_H-768_A-12",
          "last_layer_only": false,
          "train_parameters": true
        }
      }
    },
    "seq2vec": {
      "type": "cnn",
      "embedding_dim": 768,
      "num_filters": 128
      //      ,"ngram_filter_sizes": [
      //        6
      //      ]
    },
    "dropout": 0.9
  },
  "data_loader": {
    "batch_sampler": {
      "type": "bucket",
      "batch_size": 2
    }
  },
  "trainer": {
    "num_epochs": 100,
    "grad_norm": 5,
    "patience": 10,
    "cuda_device": 1,
    "optimizer": {
      "type": "adam",
      "lr": 0.001,
      "betas": [
        0.8,
        0.999
      ],
      "parameter_groups": [
        [
          [
            ".*bert.*"
          ],
          {
            "lr": 1e-05
          }
        ],
        [
          [
            "^((?!bert).)*$"
          ],
          {}
        ]
      ],
      "eps": 1e-07
    },
    "moving_average": {
      "type": "exponential",
      "decay": 0.9999
    },
    "validation_metric": "+total_acc"
  },
  "distributed": {
    "cuda_devices": [
      0,
      1
    ]
  }
}